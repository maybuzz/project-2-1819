<!DOCTYPE html>
<html lang="en" dir="ltr">

<% include partials/head.ejs %>

<body>
  <% include partials/header.ejs %>

  <main>
      <section class="freeRooms">
        <% free.forEach(function (freeRoom) { %>
            <section class="room">
              <div class="header">
                <h2 class="room__name"><%= freeRoom.name %></h2>
                <div class="room__btns">
                  <input id="<%= freeRoom.name %>" type="checkbox" name="book" hidden>
                  <label class="btn btn__book" for="<%= freeRoom.name %>">reserveren</label>
                  <label class="btn btn__booked" for="<%= freeRoom.name %>">gereserveerd</label>
                  <h3 class="free">available</h3>
                </div>
              </div>
              <div class="container">
                <div class="temp">
                  <span><p class="label">temperature</p> <%= freeRoom.temp %>Â°C</span>
                </div>
                <div class="humidity">
                  <span><p class="label">humidity</p> <%= freeRoom.humidity %>%</span>
                </div>
                <div class="co2">
                  <span><p class="label">co2</p> <%= freeRoom.co2 %></span>
                </div>
                <div class="bap">
                  <span><p class="label">baplevel</p> <%= freeRoom.pressure %></span>
                </div>
              </div>
            </section>
        <% }) %>
      </section>


      <section class="takenRooms">
        <% taken.forEach(function (takenRoom) { %>
          <section class="room">
            <div class="header">
              <h2 class="room__name"><%= takenRoom.name %></h2>
              <h3 class="taken">occupied</h3>
            </div>
          </section>
        <% }) %>
      </section>

  </main>

<% include partials/tail.ejs %>

</body>
</html>
